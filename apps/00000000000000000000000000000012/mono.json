{
    "appId": "00000000000000000000000000000012",
    "name": "Bind List",
    "routes": {
        "/": "list",
        "overlay": "overlay_layout"
    },
    "domains": [
        "bind-list.jillix.net",
        "bind-list.mono.ch"
    ],
    "publicDir": "public",
    "publicUser": 0,
    "users": [
        {
            "id": 0,
            "username": "",
            "password": "",
            "roles": [0]
        }
    ],
    "roles": [
        {
            "id": 0,
            "name": ""
        }
    ],
    "miids": {
        "list": {
            "module": "github/adioo/bind-list/dev",
            "roles": [0],
            "config": {
                "html": {
                    "type": "m",
                    "path": "list"
                },
                "css": ["/bootstrap/css/bootstrap.css"],
                "sample": true
            },
            "operations": {
                "create": {
                    "roles": [0],
                    "params": [{ "ds": "testDS" }]
                },
                "read": {
                    "roles": [0],
                    "params": [{ "ds": "testDS" }]
                },
                "update": {
                    "roles": [0],
                    "params": [{ "ds": "testDS" }]
                },
                "remove": {
                    "roles": [0],
                    "params": [{ "ds": "testDS" }]
                }
            }
        },


        "overlay_layout": {
            "module": "github/adioo/layout/v0.0.4",
            "roles": [0],
            "config": {
                "html": {
                    "type": "a",
                    "path": "layout"
                },
                "css": ["/bootstrap/css/bootstrap.css"],
                "scripts": ["/jquery.js"],
                "modules": {
                    "listContainer": "overlay_list",
                    "overlayContainer": "overlay"
                }
            }
        },
        "overlay": {
            "module": "github/gabipetrovay/overlay/v0.0.1",
            "roles": [0],
            "config": {
                "html": {
                    "type": "a",
                    "path": "overlay"
                },
                "listen": {
                    "overlay_list": {
                        "requestRemoveItem": [
                            { "handler": { "name": "show", "args": ["aForm"] } }
                        ]
                    }
                }
            }
        },
        "overlay_list": {
            "module": "github/adioo/bind-list/dev",
            "roles": [0],
            "config": {
                "html": {
                    "type": "m",
                    "path": "list"
                },
                "css": ["/bootstrap/css/bootstrap.css"],
                "container": ".content",
                "options": {
                    "selection": "single",
                    "autofetch": true,
                    "deleteConfirmation": true,
                    "classes": {
                        "selected": "selected"
                    }
                },
                "controls": {
                    "add": ".create",
                    "delete": ".delete"
                },
                "binds": [
                    {
                        "target": "create",
                        "on": [{
                            "name": "click",
                            "emit": "newItem"
                        }]
                    }
                ],
                "template": {
                    "type": "selector",
                    "value": ".template",
                    "binds": [
                        {
                            "target": ".delete",
                            "on": [{
                                "name": "click",
                                "handler": "removeItem"
                            }]
                        },
                        {
                            "on": [{
                                "name": "click",
                                "handler": "selectItem"
                            }]
                        },
                        {
                            "attr": [
                                {
                                    "name": "id",
                                    "value": {
                                        "source": "id",
                                        "filter": [
                                            { "name": "prefix", "args": "itm", "library": "/aasdsda" }
                                        ]
                                    }
                                }
                            ]
                        },
                        {
                            "target": ".itemText",
                            "html": {
                                "source": "text"
                            }
                        }
                    ]
                }
            },
            "operations": {
                "create": {
                    "roles": [0],
                    "params": [{ "ds": "testDS" }]
                },
                "read": {
                    "roles": [0],
                    "params": [{ "ds": "testDS" }]
                },
                "update": {
                    "roles": [0],
                    "params": [{ "ds": "testDS" }]
                },
                "remove": {
                    "roles": [0],
                    "params": [{ "ds": "testDS" }]
                }
            }
        },
        "aForm": {
            "module": "github/adioo/layout/v0.0.4",
            "roles": [0],
            "config": {
                "html": {
                    "type": "a",
                    "path": "article_edit"
                }
            }
        }
    }
}

