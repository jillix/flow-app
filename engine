#!/usr/bin/env node

// read CLI arguments
var repo = process.argv[2];
var port = process.argv[3];
var production = process.argv[4] === 'PRO' ? true : false;

// check the CLI arguments
if (!repo || !port) {
    throw new Error('Invalid CLI arguments. Example: ./engine /absolute/path/to/repo [PORT] ["PRO"]');
}

// start engine
require('./lib/engine')(repo, port, production);
